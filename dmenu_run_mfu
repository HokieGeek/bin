#!/bin/sh

mfu_file="$HOME/.dmenu_run_mfu"
[ ! -f "${mfu_file}" ] && touch "${mfu_file}"

while [ $# -gt 0 ]; do
    case $1 in
    --threshold) shift; threshold=$1  ;;
    --terminal)  shift; terminal="$1" ;;
    *) dmenu_args+=($1) ;;
    esac
    shift
done

dmenu_path \
| awk -v threshold=${threshold:-1} '
    FILENAME == "-" && !($0 in mfu) {
        print
        next
    }
    $1 > threshold {
        $1 = $2 = ""
        gsub(/^[[:space:]]*|[[:space:]]*$/, "")
        if ($0) {
            mfu[$0]
            print
        }
    }
' ${mfu_file} - \
| dmenu ${dmenu_args[@]} \
| awk -v shell=${SHELL:-"/bin/sh"} -v terminal=${terminal:-"xterm"} '
    BEGIN { ageOut = strftime("%s")-((86400 * 7) * 8) } # 2 months
    FILENAME == "-" && NF > 0 {
        sel = $0
        if (/#$/) {
            $0 = sprintf("%s -e \"%s\"&", terminal, gensub(/#$/, "", "g"))
        }
        print | shell
        close(shell)
        next
    }
    $2 <= ageOut { next }
    NF > 2 {
        ct = $1
        ts = $2
        $1 = $2 = ""
        gsub(/^[[:space:]]*|[[:space:]]*$/, "")
        mfu_ct[$0] = ct
        mfu_ts[$0] = ts
    }
    END {
        if (sel) {
            mfu_ct[sel]++
            mfu_ts[sel] = strftime("%s")
        }

        for (cmd in mfu) {
            printf("%s %s %s\n", mfu_ct[cmd], mfu_ts[cmd], cmd) | sprintf("sort -gr > %s", FILENAME)
        }
    }
' - ${mfu_file} &
